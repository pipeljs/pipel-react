{
  "name": "pipel-react",
  "version": "0.1.2",
  "description": "Pipel-based Streaming Programming Library for React",
  "author": "PipelJS Team <https://github.com/pipeljs>",
  "repository": "https://github.com/pipeljs/pipel-react",
  "homepage": "https://pipeljs.github.io/pipel-react/index.html",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "types": "./dist/mjs/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "sideEffects": false,
  "keywords": [
    "promise",
    "pipeljs",
    "react",
    "stream",
    "pipel-react",
    "reactive",
    "observable",
    "async",
    "hooks"
  ],
  "scripts": {
    "test": "vitest --run",
    "check": "tsc --noEmit",
    "coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev packages",
    "docs:build": "vitepress build packages",
    "docs:preview": "vitepress preview packages",
    "build": "rm -rf dist && tsc -p tsconfig.cjs.json && tsc -p tsconfig.mjs.json",
    "build:watch": "tsc -p tsconfig.mjs.json --watch",
    "prepare": "husky",
    "lint": "eslint --cache --fix",
    "release": "standard-version",
    "release-major": "standard-version --release-as major",
    "release-minor": "standard-version --release-as minor",
    "release-patch": "standard-version --release-as patch",
    "release-and-publish": "npm run release && npm run publish",
    "release-and-publish:beta": "npm run release && npm run publish:beta",
    "release-and-publish:major": "npm run release-major && npm run build && npm publish",
    "release-and-publish:minor": "npm run release-minor && npm run build && npm publish",
    "release-and-publish:patch": "npm run release-patch && npm run build && npm publish"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "pipeljs": "^0.3.37"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "2.0.5",
    "eslint": "^9.13.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vitepress": "1.3.4",
    "vitest": "2.0.5"
  }
}
